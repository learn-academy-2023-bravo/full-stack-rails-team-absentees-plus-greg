<h1> Edit Blog </h1>

<%= form_with model: @blog, method: :patch do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <%= form.label :content %>
    <%= form.text_field :content %>
    <%= form.submit "Update" %>
<% end %>

<p><%= link_to 'Back to Blog', blogs_path %> </p>